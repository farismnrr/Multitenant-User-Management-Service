# =============================================================================
# Database Configuration
# =============================================================================

## PostgreSQL host address
## Default: 127.0.0.1
CORE_DB_HOST=

## PostgreSQL port
## Default: 5432
CORE_DB_PORT=

## Database username
## Default: postgres
CORE_DB_USER=

## Database password
## Default: postgres
CORE_DB_PASS=

## Database name
## Default: user_auth_plugin_dev
CORE_DB_NAME=

# =============================================================================
# Application Security
# =============================================================================

## Application secret key for signing
## REQUIRED in production
## This should be a strong, random string
SECRET_KEY=

## API key for endpoint protection
## REQUIRED in production
## Used by ApiKeyMiddleware to protect /api routes
API_KEY=your-api-key-for-endpoint-protection

## Tenant secret key for bootstrapping
## REQUIRED in production
## Used by TenantMiddleware to authenticate tenants
TENANT_SECRET_KEY=your-tenant-secret-key-for-bootstrapping

# =============================================================================
# JWT Configuration
# =============================================================================

## Secret key for JWT signing
## REQUIRED
## Must be a strong, random string different from SECRET_KEY
JWT_SECRET=

## Access token lifetime in seconds
## Default: 900 (15 minutes)
## How long access tokens remain valid
JWT_ACCESS_TOKEN_EXPIRY=

## Refresh token lifetime in seconds
## Default: 604800 (7 days)
## How long refresh tokens remain valid
JWT_REFRESH_TOKEN_EXPIRY=

# =============================================================================
# Rate Limiting
# =============================================================================

## Maximum requests per window
## Default: 5
## Number of requests allowed within the time window
RATE_LIMIT_MAX_REQUESTS=

## Time window in seconds
## Default: 900 (15 minutes)
## Duration of the rate limiting window
RATE_LIMIT_WINDOW_SECS=

## Block duration in seconds
## Default: 1800 (30 minutes)
## How long an IP is blocked after exceeding the limit
RATE_LIMIT_BLOCK_DURATION_SECS=

# =============================================================================
# Logging
# =============================================================================

## Logging level
## Default: info
## Options: trace, debug, info, warn, error
LOG_LEVEL=

# =============================================================================
# Server Configuration
# =============================================================================

## Graceful shutdown period in seconds
## Default: 5
## Time to wait for ongoing requests to complete during shutdown
GRACE_PERIOD_SECS=
